    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Check In Item(Enter Id)" />

    <TextField fx:id="itemIdField" promptText="Enter Item ID" />

    <Button onAction="#onCheckIn" text="Check In" />
