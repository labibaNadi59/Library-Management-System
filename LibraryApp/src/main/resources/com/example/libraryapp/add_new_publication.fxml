<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.libraryapp.AddNewPublicationController">

    <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

    <Label text="Enter the details of the new publication" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="titleField" promptText="Title"/>
    <TextField fx:id="categoryField" promptText="Category"/>
    <TextField fx:id="authorsField" promptText="Authors (comma separated)"/>
    <TextField fx:id="publishYearField" promptText="Publish Year"/>
    <TextField fx:id="journalField" promptText="Journal or Conference Name"/>

    <Button text="Submit" onAction="#onSubmit"/>
</VBox>
