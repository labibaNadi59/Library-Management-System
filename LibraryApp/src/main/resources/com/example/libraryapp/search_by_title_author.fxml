<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.libraryapp.SearchByTitleAuthorController">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="Search by Title and Author" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="titleField" promptText="Enter Title"/>
    <TextField fx:id="authorField" promptText="Enter Author"/>

    <Button text="Search" onAction="#onSearch"/>

</VBox>
