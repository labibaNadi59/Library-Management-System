<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.libraryapp.CheckoutItemController">

    <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

    <Label text="Checkout Item" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="itemIdField" promptText="Enter Item ID"/>
    <TextField fx:id="memberIdField" promptText="Enter Member ID"/>

    <Button text="Checkout" onAction="#onCheckout"/>
</VBox>
